---
interface Props {
  lang?: "es" | "en";
}

const { lang = "es" } = Astro.props;

const isSpanish = lang === "es";

const termsLabel = isSpanish
  ? "Términos y condiciones"
  : "Terms and conditions";
const privacyLabel = isSpanish ? "Aviso de privacidad" : "Privacy policies";
---

<footer class="min-h-[100px] mx-auto p-4 bg-white flex justify-center">
  <div class="container p-8 text-black font-arimo">
    <div
      class="flex flex-col md:flex-row justify-center items-center gap-2 font-md md:text-md text-sm"
    >
      <div class="font-3xl">
        © Jalapeño Films <span id="year"></span>
      </div>
    </div>
  </div>
</footer>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    document.getElementById("year").textContent = `${new Date().getFullYear()}`;
  });
</script>
